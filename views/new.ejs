<%- include('./partials/header.ejs') %>
  
<div class="row">
     <div class="col-6 m-auto">
      <form action="/jobs" method="post">
        <h1>Add a new job </h1>
  
          <div class="form-group mb-3">
            <label for="name">Company Name</label>
            <input type="text" class="form-control" id="name" name="name" >
          </div>
          <div class="form-group mb-3">
            <label for="address">Company Location</label>
            <input type="text" class="form-control" name="address" id="address">
          </div>
          <div class="form-group mb-3">
            <label for="image">Company Logo</label>
            <input type="text" class="form-control" name="image" id="image" >
          </div>
          <div class="form-group mb-3">
            <label for="package">Package</label>
            <input type="number" class="form-control" name="package" id="package" >
          </div>
          <div class="form-group mb-3">
            <label for="cgpa">CGPA</label>
            <input type="number" min="0" max="10" step=".01" class="form-control" name="cgpa" id="cgpa" >
          </div>
          <div class="form-group mb-3">
            <label for="deadline">Deadline</label>
            <input type="date" class="form-control" name="deadline" id="deadline" >
          </div>
          <div class="form-group mb-3">
            <label for="type">Job type</label>
            <input type="text" class="form-control" name="type" id="type" >
          </div>
          <button type="submit" class="btn btn-primary ">Post the job</button>
        </form>

     </div>
</div>

    
   
<%- include('./partials/footer.ejs') %>
